<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/id_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@mipmap/off_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="王府庄倒班神马什么 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/id_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSUOSUS7897987"
                android:textColor="@color/text_rank_item" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/radio_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点类型: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_stat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省级连续点"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行政区划: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河北省张家口市阳原县"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属路线: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G109[北京-拉萨公路]"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桩号里程: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_mile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="296.3km处,代表15,.235km"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始地点: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G109新旧交叉点[292.72km]"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终止地点: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山西界[308.23km]"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级划分: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通国道[二级公路]"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建设日期: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-07-27"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="责任单位: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张家口市交通运输局公路管理处"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18666666666"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>