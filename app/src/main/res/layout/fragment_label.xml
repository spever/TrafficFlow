<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@mipmap/on_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="王府庄倒班神马什么 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/id_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSUOSUS7897987"
                android:textColor="@color/text_rank_item" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_minutes"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_checked"
                android:checked="true"
                android:text="5分钟"
                android:textColor="@color/btn_text_selector" />

            <RadioButton
                android:id="@+id/id_hour"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_checked"
                android:text="24小时"
                android:textColor="@color/btn_text_selector" />

            <RadioButton
                android:id="@+id/id_day"
                style="@style/BottomTabStyle"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_checked"
                android:text="每日"
                android:textColor="@color/btn_text_selector" />

            <RadioButton
                android:id="@+id/id_month"
                style="@style/BottomTabStyle"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_checked"
                android:text="月度"
                android:textColor="@color/btn_text_selector" />

            <RadioButton
                android:id="@+id/id_year"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_checked"
                android:text="年度"
                android:textColor="@color/btn_text_selector" />
        </RadioGroup>
    </LinearLayout>

