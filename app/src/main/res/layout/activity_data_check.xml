<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/id_iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="数据核查"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/radio_line" />


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="王府庄倒班 "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GSUOSUS7897987"
            android:textColor="@color/text_rank_item" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/radio_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开始时间"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_toLeftOf="@+id/id_iv_more1"
            android:layout_toStartOf="@+id/id_iv_more1"
            android:text="2015-6-28 12:30"
            android:textColor="@color/white" />

        <ImageView

            android:id="@+id/id_iv_more1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:src="@mipmap/global_ico_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/radio_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="结束时间"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toLeftOf="@+id/id_iv_more2"
            android:layout_toStartOf="@+id/id_iv_more2"
            android:text="2015-6-28 12:30"
            android:textColor="@color/white" />

        <ImageView

            android:id="@+id/id_iv_more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:src="@mipmap/global_ico_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/radio_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <RadioGroup
            android:id="@+id/rg_group_des"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="@color/theme_color"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_broken"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_no_check"
                android:checked="true"
                android:text="断面"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/id_up"
                style="@style/BottomTabStyle"
                android:layout_marginLeft="8dp"
                android:background="@drawable/selector_radio_no_check"
                android:text="上行"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/id_dowm"
                style="@style/BottomTabStyle"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/selector_radio_no_check"
                android:text="下行"
                android:textColor="@drawable/selector_radio_text" />
            <!--android:textColor="@color/btn_text_selector" -->


        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_tv_name4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_round_textview"
                    android:gravity="center"
                    android:text="中小客" />

                <TextView
                    android:id="@+id/id_tv_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_name4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_round_text"
                    android:text="1876"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_tv_name5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_round_textview"
