<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_color"
    android:padding="4dp">

    <ImageView
        android:paddingTop="4dp"
        android:id="@+id/id_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ico_girl" />

    <LinearLayout
        android:id="@+id/id_ll_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:id="@+id/id_tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马六："
                android:textColor="@color/white" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/id_tv_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(ID:1234325432535)"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新疆维吾尔自治区公路管理局"
            android:textColor="@color/text_rank_item" />


        <TextView
            android:id="@+id/id_tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124124124@qq.com"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:src="@mipmap/nav_ico_phone" />
</RelativeLayout>