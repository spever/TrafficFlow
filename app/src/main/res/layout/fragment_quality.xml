<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@mipmap/on_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="王府庄倒班神马什么 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/id_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSUOSUS7897987"
                android:textColor="@color/text_rank_item" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:text="设备信息"
        android:textColor="@color/white" />

    <ListView
        android:descendantFocusability="blocksDescendants"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:id="@+id/id_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="分日数据质量"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="[优秀]"
            android:textColor="@color/circle" />

        <TextView
            android:id="@+id/id_tv_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:gravity="center"
            android:text="2016-1-24"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@mipmap/global_ico_more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="10dp">

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_day_progress1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_day_progress2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_day_progress3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="月度数据质量"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="[优秀]"
            android:textColor="@color/circle" />

        <TextView
            android:id="@+id/id_tv_time_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:gravity="center"
            android:text="2016-1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@mipmap/global_ico_more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_month_progress1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_month_progress2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <com.subzero.trafficflow.widget.CircleProgressView
            android:id="@+id/id_month_progress3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>